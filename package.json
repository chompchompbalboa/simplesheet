    "dependencies": {
        "axios": "^0.18",
        "change-case": "^3.1.0",
        "lodash": "^4.17.14",
        "moment": "^2.24.0",
        "normalizr": "^3.3.0",
        "react-autosize-textarea": "^7.0.0",
        "react-color": "^2.17.3",
        "react-datepicker": "^2.3.0",
        "react-redux": "^5.0.7",
        "react-sane-contenteditable": "^1.5.0",
        "redux": "^4.0.0",
        "redux-thunk": "^2.3.0",
        "reselect": "^4.0.0",
        "styled-components": "^4.1.3",
        "uuid": "^3.3.2"
