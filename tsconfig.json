{
  "compilerOptions": {
    "outDir": "./public/js",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "baseUrl": "./resources/js",
    "paths": {
      "@/*": ["./*"],
      "@app/*": ["./bundles/App/*"],
      "@site/*": ["./bundles/Site/*"]
    },
    "skipLibCheck": true
  },
  "include": [
    "./resources/**/*"
  ],
  "exclude": [
    "node_modules",
    "./resources/js/components/__Boilerplate"
  ]
}